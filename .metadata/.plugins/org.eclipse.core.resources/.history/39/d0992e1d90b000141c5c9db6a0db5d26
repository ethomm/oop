package gui;

import java.awt.BorderLayout;
import java.awt.Container;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;

public class MainFrame extends JFrame {
	private boolean large = false;

	public MainFrame(String title) {
		super(title);
		//Hva gjør vi ved lukking av vinduet
		setDefaultCloseOperation(EXIT_ON_CLOSE);//Final
		
		//Komponenter
		final JButton button = new JButton("Stort vindu");
		
		//Velg Layout manager
		setLayout(new BorderLayout());
		
		//Få tak i en kontainer for å putte dette i noe
		Container container = getContentPane();
		
		//Plasserer knappen
		container.add(button, BorderLayout.CENTER);
		button.setSize(100, 50);
		
		//funksjonalitet
		button.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				if(!large ){
					setSize(800, 800);	
					large = true;
					button.setText("Lite Vindu");
				}else{
					setSize(400, 400);
					large = false;
					button.setText("Stort vindu");
					
				}
				
				
			}
		});
		
		//Set størrelse
		setSize(500, 500);
		// vis vindu
		setVisible(true);
	}
	

}